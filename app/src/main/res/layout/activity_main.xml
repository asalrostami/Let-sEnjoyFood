<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/food1"
    android:alpha="0.4"
    tools:context="com.example.asal.letsenjoyfood.MainActivity">


    <Button
        android:id="@+id/btnRegisterM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Register"
        android:textStyle="bold|italic"
        android:background="@null"
        android:textSize="20sp"
        android:textColor="#fce402"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="45dp"
        android:layout_marginStart="45dp"
        android:layout_marginBottom="73dp"
        android:onClick="register_click"/>

    <Button
        android:id="@+id/btnLoginM"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Login"
        android:textStyle="bold|italic"
        android:textSize="20sp"
        android:textColor="#fce402"
        android:background="@null"
        android:layout_alignBaseline="@+id/btnRegisterM"
        android:layout_alignBottom="@+id/btnRegisterM"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="65dp"
        android:layout_marginEnd="65dp"
        android:onClick="login_click"/>

    <TextView
        android:id="@+id/textView2"
        android:layout_width="match_parent"
        android:layout_height="150sp"
        android:textColor="#06facd"
        android:textSize="18sp"
        android:textStyle="bold|italic"
        android:textAlignment="center"
        android:text="Food can make us happy. It can make us think of home or remember our grandmotherâ€™s cooking with love. Food can be an adventure when we explore new tastes and cultures."
        android:layout_centerVertical="true"
        android:layout_alignLeft="@+id/textView3"
        android:layout_alignStart="@+id/textView3"
        android:layout_alignRight="@+id/textView3"
        android:layout_alignEnd="@+id/textView3"/>

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_marginTop="100dp"
        android:layout_marginBottom="10dp"
        android:layout_height="wrap_content"
        android:text="Let's Enjoy"

        android:textSize="50sp"
        android:layout_marginLeft="50sp"
        android:layout_marginRight="50sp"
        android:gravity="center"
        android:textColor="#34fc02"
        android:textStyle="bold"/>
</RelativeLayout>
